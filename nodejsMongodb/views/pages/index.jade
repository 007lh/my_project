extends ../layout

block content
  .container
    .row
      each item in movie
        .col-md-2
          .thumbnail
            a(href="/movie/#{item._id}")
              //-img(src="#{item.poster}", alt="#{item.title}", height:"400", width: '100%, ')
              img(src="#{item.poster}", alt="#{item.title}", style={width: '100%', height: '260px'})
            .caption
              h3 #{item.title}
              p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
